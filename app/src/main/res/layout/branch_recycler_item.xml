        <TextView
                android:text="Branch"
                android:textColor="#FF9800"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/branch_type"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="16dp"/>
        <TextView
                android:text="Name"
                android:textColor="#0054A6"
                android:textSize="18sp"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:id="@+id/branch_name"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/branch_type"/>
        <TextView
                android:text="Address"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/branch_address"
                app:layout_constraintTop_toBottomOf="@+id/branch_name"
                app:layout_constraintStart_toStartOf="@+id/branch_name"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/branch_name"
                app:layout_constraintHorizontal_bias="0.0"/>
        <ImageView
                android:layout_width="40dp"
                android:layout_height="52dp"
                app:srcCompat="@drawable/ic_phone_blue_24dp"
                android:id="@+id/imageView3"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="72dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.992"
                app:layout_constraintTop_toBottomOf="@+id/branch_name"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CALL"
                android:textColor="#0054A6"
                android:id="@+id/textView15"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintEnd_toEndOf="@+id/imageView3"
                app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="4dp"/>
        <ImageView
                android:layout_width="40dp"
                android:layout_height="52dp"
                app:srcCompat="@drawable/ic_directions_black_24dp"
                android:id="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.976"
                app:layout_constraintTop_toTopOf="@+id/imageView3"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView15"
                app:layout_constraintVertical_bias="0.0"/>
        <TextView
                android:text="GO"
                android:textColor="#0054A6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                app:layout_constraintStart_toStartOf="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="@+id/imageView4"
                app:layout_constraintHorizontal_bias="0.612"
                android:layout_marginTop="4dp"/>
        <TextView
                android:text="TextView"
                android:textColor="#13FC1C"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                app:layout_constraintTop_toBottomOf="@+id/branch_address"
                app:layout_constraintStart_toStartOf="@+id/branch_address"
                app:layout_constraintEnd_toEndOf="@+id/branch_address"
                android:layout_marginTop="4dp"
                app:layout_constraintHorizontal_bias="0.0"/>


    <!--</android.support.constraint.ConstraintLayout>-->
    <ImageView
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_width="match_parent"
            android:layout_height="5dp" app:srcCompat="@drawable/line_shape"
            android:id="@+id/imageView23"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:scaleType="center"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/time"
            android:layout_marginTop="12dp"/>
    <!--</android.support.v7.widget.CardView>-->
</android.support.constraint.ConstraintLayout>